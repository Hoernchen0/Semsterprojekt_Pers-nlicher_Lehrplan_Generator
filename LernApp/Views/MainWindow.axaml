<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="LernApp.Views.MainWindow"
        Title="Lernplan" Width="500" Height="400">
    <StackPanel Margin="16">
        <StackPanel Orientation="Horizontal">
            <TextBox Name="FachBox" Width="150" Watermark="Fach"/>
            <TextBox Name="ThemaBox" Width="200" Margin="10,0,0,0" Watermark="Thema"/>
            <Button Content="HinzufÃ¼gen" Width="100" Click="Add_Click"/>
        </StackPanel>

        <ListBox ItemsSource="{Binding Einheiten}" Margin="0,10,0,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Fach}" Width="100"/>
                        <TextBlock Text="{Binding Thema}" Width="200"/>
                        <TextBlock Text="{Binding Datum}" Width="150"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</Window>
