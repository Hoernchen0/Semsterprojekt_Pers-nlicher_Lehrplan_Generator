<UserControl
    x:Class="LehrplanGenerator.Views.Chat.ChatView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:LehrplanGenerator.Models.Chat"
    xmlns:vm="using:LehrplanGenerator.ViewModels.Chat"
    x:DataType="vm:ChatViewModel">


    <UserControl.Styles>
        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="SF Pro Display" />
        </Style>

        <Style Selector="Button">
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="14 8" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>


    </UserControl.Styles>

    <Grid Background="#FFFFFF" RowDefinitions="Auto,*,Auto,Auto">

        <TextBlock
            Grid.Row="0"
            Margin="0,16,0,16"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="28"
            FontWeight="Bold"
            Foreground="Black"
            Text="Chat" />

        <Border
            Grid.Row="1"
            Padding="16,0"
            Background="#F9F9FB">

            <ScrollViewer VerticalScrollBarVisibility="Auto">

                <StackPanel Margin="0,16" Spacing="8">
                    <ItemsControl ItemsSource="{Binding Messages}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="models:ChatMessage">
                                <StackPanel Margin="0,0,0,8">
                                    <!--  Nutzer-Nachricht: rechts, blau  -->
                                    <!--  Assistent-Nachricht: links, grau  -->

                                    <Border
                                        MaxWidth="520"
                                        Padding="12"
                                        HorizontalAlignment="{Binding Sender, Converter={StaticResource SenderToAlignmentConverter}}"
                                        Background="{Binding Sender, Converter={StaticResource SenderToColorConverter}}"
                                        CornerRadius="16">

                                        <StackPanel Spacing="4">
                                            <TextBlock
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                Foreground="#6E6E73"
                                                Text="{Binding Sender}" />

                                            <TextBlock
                                                FontSize="14"
                                                Foreground="#1C1C1E"
                                                Text="{Binding Text}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>

                                    </Border>
                                </StackPanel>

                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

            </ScrollViewer>
        </Border>


        <StackPanel
            Grid.Row="2"
            Margin="0,8,0,0"
            IsVisible="{Binding CanCreateStudyPlan}"
            Orientation="Vertical">

            <Button
                Padding="20,8"
                HorizontalAlignment="Center"
                Background="#fbfbff"
                Command="{Binding CreateStudyPlanCommand}"
                Content="Lernplan erstellen"
                CornerRadius="20"
                Foreground="Black"
                IsEnabled="{Binding !IsSending}" />
        </StackPanel>

        <Border
            Grid.Row="3"
            Margin="8,0,8,8"
            Padding="12"
            Background="#0d0d0e"
            CornerRadius="25">

            <Grid VerticalAlignment="Center" ColumnDefinitions="Auto,*,Auto">

                <Button
                    Grid.Column="0"
                    Background="#fbfbff"
                    Content="Upload"
                    Foreground="Black" />
                <TextBox
                    Grid.Column="1"
                    Margin="8,0"
                    Background="#fbfbff"
                    CaretBrush="Black"
                    Foreground="Black"
                    Text="{Binding InputText}"
                    Watermark="Gebe den Zeitraum, deine Lernzeit pro Tag und die Themen anâ€¦">

                    <TextBox.Styles>
                        <Style Selector="TextBox">
                            <Setter Property="FocusAdorner">
                                <FocusAdornerTemplate />
                            </Setter>
                            <Setter Property="BorderThickness" Value="0" />
                        </Style>
                        <Style Selector="TextBox /template/ TextBlock#PART_Watermark">
                            <Setter Property="Foreground" Value="#999999" />
                        </Style>
                    </TextBox.Styles>

                </TextBox>

                <Button
                    Grid.Column="2"
                    Background="#fbfbff"
                    Command="{Binding SendCommand}"
                    Content="Senden"
                    Foreground="Black" />
            </Grid>
        </Border>

    </Grid>

</UserControl>
