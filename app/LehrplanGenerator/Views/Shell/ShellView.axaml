<UserControl
    x:Class="LehrplanGenerator.Views.Shell.ShellView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:LehrplanGenerator.ViewModels.Shell"
    x:DataType="vm:ShellViewModel">

    <!-- LOKALE STYLES FÜR SIDEBAR -->
    <UserControl.Styles>

        <!-- Basis-Stil für Sidebar-Buttons -->
        <Style Selector="Button.sidebar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#020617"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Hover-Effekt -->
        <Style Selector="Button.sidebar:pointerover">
            <Setter Property="Background" Value="#E0E7FF"/>
        </Style>

    </UserControl.Styles>

    <!-- ROOT LAYOUT -->
    <Grid Background="#FFFFFF"
          ColumnDefinitions="240,*">

        <!-- SIDEBAR LINKS -->
        <Border Grid.Column="0"
                Background="#F8FAFC"
                BorderBrush="#E5E7EB"
                BorderThickness="0,0,1,0"
                Padding="20">

            <StackPanel Spacing="24">

                <!-- USER INFO -->
                <StackPanel Spacing="4">
                    <TextBlock Text="{Binding CurrentUserName}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#020617"/>
                    <TextBlock Text="Lehrplan Generator"
                               FontSize="12"
                               Foreground="#64748B"/>
                </StackPanel>

                <!-- NAVIGATION -->
                <StackPanel Spacing="6">

                    <Button Classes="sidebar"
                            Command="{Binding ShowHomeCommand}"
                            Content="Home"/>

                    <Button Classes="sidebar"
                            Command="{Binding ShowStudyPlanCommand}"
                            Content="Kalender"/>

                    <Button Classes="sidebar"
                            Command="{Binding ShowChatCommand}"
                            Content="Chat"/>

                    <Button Classes="sidebar"
                            Command="{Binding ShowSettingsCommand}"
                            Content="Einstellungen"/>

                </StackPanel>

            </StackPanel>
        </Border>

        <!-- CONTENT RECHTS -->
        <ContentControl Grid.Column="1"
                        Background="#FFFFFF"
                        Content="{Binding CurrentContent}" />

    </Grid>
</UserControl>
