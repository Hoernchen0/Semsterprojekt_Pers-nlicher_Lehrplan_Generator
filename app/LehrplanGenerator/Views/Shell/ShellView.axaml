<UserControl
    x:Class="LehrplanGenerator.Views.Shell.ShellView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:LehrplanGenerator.ViewModels.Shell"
    x:DataType="vm:ShellViewModel">

    <DockPanel>
        <!--  Taskleiste (bleibt immer sichtbar)  -->
        <Border
            Padding="15"
            Background="#2c3e50"
            BoxShadow="0 2 10 0 #40000000"
            DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal" Spacing="15">

                <TextBlock
                    Margin="0,0,20,0"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Foreground="White"
                    Text="{Binding CurrentUserName}" />

                <Button
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding ShowHomeCommand}"
                    Content="Home"
                    Foreground="White" />
                <Button
                    Background="Transparent"
                    BorderThickness="0"
                    Content="Kalender"
                    Foreground="White" />

                <Button
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding ShowChatCommand}"
                    Content="Chat"
                    Foreground="White" />

                <Button
                    Background="Transparent"
                    BorderThickness="0"
                    Command="{Binding ShowSettingsCommand}"
                    Content="Einstellungen"
                    Foreground="White" />

            </StackPanel>
        </Border>

        <!--  Content Area (Ã¤ndert sich je nach Tab)  -->
        <ContentControl Content="{Binding CurrentContent}" />
    </DockPanel>

</UserControl>
