<UserControl
    x:Class="LehrplanGenerator.Views.Shell.ShellView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:LehrplanGenerator.ViewModels.Shell"
    x:DataType="vm:ShellViewModel">

    <!-- Root Layout -->
    <Grid Background="#FFFFFF"
          ColumnDefinitions="240,*">

        <!-- SIDEBAR (links) -->
        <Border
            Grid.Column="0"
            Background="#F8FAFC"
            BorderBrush="#E5E7EB"
            BorderThickness="0,0,1,0"
            Padding="20">

            <StackPanel Spacing="20">

                <!-- User -->
                <TextBlock
                    Text="{Binding CurrentUserName}"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="#020617" />

                <!-- Navigation Buttons (UNVERÃ„NDERT, nur vertikal) -->
                <StackPanel Spacing="10">

                    <Button
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding ShowHomeCommand}"
                        Content="Home"
                        Foreground="#020617"
                        HorizontalContentAlignment="Left" />

                    <Button
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding ShowStudyPlanCommand}"
                        Content="Kalender"
                        Foreground="#020617"
                        HorizontalContentAlignment="Left" />

                    <Button
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding ShowChatCommand}"
                        Content="Chat"
                        Foreground="#020617"
                        HorizontalContentAlignment="Left" />

                    <Button
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding ShowSettingsCommand}"
                        Content="Einstellungen"
                        Foreground="#020617"
                        HorizontalContentAlignment="Left" />

                </StackPanel>

            </StackPanel>
        </Border>

        <!-- CONTENT AREA (rechts) -->
        <ContentControl
            Grid.Column="1"
            Background="#FFFFFF"
            Content="{Binding CurrentContent}" />

    </Grid>
</UserControl>
