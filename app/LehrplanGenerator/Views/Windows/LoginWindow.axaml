<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LehrplanGenerator.ViewModels.Auth"
        x:Class="LehrplanGenerator.Views.Windows.LoginWindow"
        x:DataType="vm:LoginViewModel"
        Title="LernApp - Anmelden"
        Width="400"
        Height="500"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20" Spacing="15" VerticalAlignment="Center">
        <TextBlock Text="ðŸ“š LernApp" FontSize="28" FontWeight="Bold" Foreground="#1E88E5" HorizontalAlignment="Center"/>
        <TextBlock Text="PersÃ¶nlicher Lehrplan Generator" FontSize="14" Foreground="Gray" HorizontalAlignment="Center"/>
        
        <Separator/>
        
        <TextBlock Text="Anmelden" FontSize="20" FontWeight="SemiBold"/>
        
        <StackPanel Spacing="5">
            <TextBlock Text="E-Mail:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding Email}" Watermark="ihre@email.com" Height="40" Padding="10"/>
        </StackPanel>

        <StackPanel Spacing="5">
            <TextBlock Text="Passwort:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding Password}" PasswordChar="â€¢" Watermark="Passwort" Height="40" Padding="10"/>
        </StackPanel>

        <TextBlock Text="{Binding Result}" Foreground="Red" TextWrapping="Wrap" IsVisible="{Binding Result.Length}"/>

        <Button Content="Anmelden" 
                Command="{Binding LoginCommand}"
                Height="45" 
                FontSize="14"
                Background="#1E88E5"
                Foreground="White"
                FontWeight="Bold"/>

        <TextBlock Text="Noch kein Konto?" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        <Button Content="Registrieren" 
                Command="{Binding CancelCommand}"
                Height="40"
                Background="Transparent"
                Foreground="#1E88E5"
                FontWeight="SemiBold"/>
    </StackPanel>

</Window>
