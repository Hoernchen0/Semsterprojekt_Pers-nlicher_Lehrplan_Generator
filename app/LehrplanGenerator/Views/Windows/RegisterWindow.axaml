<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LehrplanGenerator.ViewModels.Auth"
        x:Class="LehrplanGenerator.Views.Windows.RegisterWindow"
        x:DataType="vm:RegisterViewModel"
        Title="LernApp - Registrieren"
        Width="450"
        Height="600"
        WindowStartupLocation="CenterScreen">

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="15" VerticalAlignment="Top">
            <TextBlock Text="ðŸ“š LernApp" FontSize="28" FontWeight="Bold" Foreground="#1E88E5" HorizontalAlignment="Center"/>
            <TextBlock Text="Neues Konto erstellen" FontSize="14" Foreground="Gray" HorizontalAlignment="Center"/>
            
            <Separator/>
            
            <StackPanel Spacing="5">
                <TextBlock Text="Vorname:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding FirstName}" Watermark="Vorname" Height="40" Padding="10"/>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Text="Nachname:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding LastName}" Watermark="Nachname" Height="40" Padding="10"/>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Text="E-Mail:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Email}" Watermark="ihre@email.com" Height="40" Padding="10"/>
            </StackPanel>

            <StackPanel Spacing="5">
                <TextBlock Text="Passwort:" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Password}" PasswordChar="â€¢" Watermark="Min. 6 Zeichen" Height="40" Padding="10"/>
            </StackPanel>

            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" IsVisible="{Binding ErrorMessage.Length}"/>

            <Button Content="Registrieren"
                    Height="45" 
                    FontSize="14"
                    Command="{Binding RegisterCommand}"
                    Background="#1E88E5"
                    Foreground="White"
                    FontWeight="Bold"/>

            <TextBlock Text="Bereits registriert?" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            <Button Content="ZurÃ¼ck zur Anmeldung" 
                    Height="40"
                    Command="{Binding MenuCommand}"
                    Background="Transparent"
                    Foreground="#1E88E5"
                    FontWeight="SemiBold"/>
        </StackPanel>
    </ScrollViewer>

</Window>
