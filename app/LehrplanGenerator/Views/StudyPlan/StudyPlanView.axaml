<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:LehrplanGenerator.ViewModels"
             x:Class="LehrplanGenerator.Views.StudyPlan.StudyPlanView"
             x:DataType="vm:StudyPlanViewModel">

   <StackPanel>
        <TextBlock Text="{Binding Title}" FontSize="20" Margin="0,0,0,10"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <ListBox ItemsSource="{Binding Entries}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                 <StackPanel>
                        <TextBlock Text="{Binding DayFormatted}" />
                        <TextBlock Text="{Binding Topic}" />
                        <TextBlock Text="{Binding StartFormatted}" />
                        <TextBlock Text="{Binding EndFormatted}" />
                        <TextBlock Text="{Binding DurationFormatted}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        </ScrollViewer>
        <TextBlock Text="{Binding Result}" Foreground="Gray" Margin="0,10,0,0"/>
    </StackPanel>

</UserControl>