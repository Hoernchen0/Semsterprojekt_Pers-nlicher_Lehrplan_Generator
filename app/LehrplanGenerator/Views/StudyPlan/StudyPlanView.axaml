<UserControl
    x:Class="LehrplanGenerator.Views.StudyPlan.StudyPlanView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:LehrplanGenerator.ViewModels.StudyPlan"
    x:DataType="vm:StudyPlanViewModel">

    <Grid>

        <!--  ================= DESKTOP =================  -->
        <Grid
            x:Name="DesktopLayout"
            Margin="32"
            ColumnDefinitions="300,*"
            IsVisible="False">

            <!--  LINKS  -->
            <StackPanel Grid.Column="0" Spacing="16">

                <!--  STUDY PLAN SELECT  -->
                <ComboBox ItemsSource="{Binding StudyPlans}" SelectedItem="{Binding SelectedStudyPlan}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!--  DAYS  -->
                <ItemsControl ItemsSource="{Binding Days}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:DayPlanViewModel">
                            <Button Command="{Binding $parent[UserControl].DataContext.SelectDayCommand}" CommandParameter="{Binding}">
                                <StackPanel Spacing="2">
                                    <TextBlock FontWeight="Bold" Text="{Binding DisplayDate}" />
                                    <TextBlock
                                        FontSize="12"
                                        Opacity="0.6"
                                        Text="{Binding Tasks.Count, StringFormat='Sessions: {0}'}" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>

            <!--  RECHTS  -->
            <Border
                Grid.Column="1"
                Margin="16,0,0,0"
                Padding="24"
                Background="#020617"
                CornerRadius="12">

                <StackPanel Spacing="16">

                    <TextBlock
                        FontSize="24"
                        FontWeight="Bold"
                        Text="{Binding SelectedDay.DisplayDate}" />

                    <ItemsControl ItemsSource="{Binding SelectedDay.Tasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:TaskItemViewModel">
                                <Border
                                    Margin="0,0,0,10"
                                    Padding="12"
                                    BorderBrush="#334155"
                                    BorderThickness="1"
                                    CornerRadius="8">

                                    <StackPanel Spacing="4">
                                        <TextBlock FontWeight="SemiBold" Text="{Binding Title}" />
                                        <TextBlock
                                            FontSize="12"
                                            Opacity="0.6"
                                            Text="{Binding Time}" />
                                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                                        <TextBlock
                                            FontSize="12"
                                            Opacity="0.7"
                                            Text="{Binding IsDone, StringFormat='Abgeschlossen: {0}'}" />
                                    </StackPanel>

                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </Border>

        </Grid>

        <!--  ================= MOBILE =================  -->
        <ScrollViewer
            x:Name="MobileLayout"
            Padding="16"
            IsVisible="False">

            <StackPanel Spacing="16">

                <!--  STUDY PLAN SELECT  -->
                <ComboBox ItemsSource="{Binding StudyPlans}" SelectedItem="{Binding SelectedStudyPlan}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!--  DAYS + TASKS  -->
                <ItemsControl ItemsSource="{Binding Days}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:DayPlanViewModel">
                            <Border
                                Margin="0,0,0,12"
                                Padding="12"
                                BorderBrush="#334155"
                                BorderThickness="1"
                                CornerRadius="10">

                                <StackPanel Spacing="8">

                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Text="{Binding DisplayDate}" />

                                    <ItemsControl ItemsSource="{Binding Tasks}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="vm:TaskItemViewModel">
                                                <Border
                                                    Margin="0,0,0,8"
                                                    Padding="10"
                                                    Background="#020617"
                                                    CornerRadius="8">

                                                    <StackPanel Spacing="4">
                                                        <TextBlock FontWeight="SemiBold" Text="{Binding Title}" />
                                                        <TextBlock
                                                            FontSize="12"
                                                            Opacity="0.6"
                                                            Text="{Binding Time}" />
                                                        <TextBlock
                                                            FontSize="12"
                                                            Text="{Binding Description}"
                                                            TextWrapping="Wrap" />
                                                        <TextBlock
                                                            FontSize="11"
                                                            Opacity="0.7"
                                                            Text="{Binding IsDone, StringFormat='Abgeschlossen: {0}'}" />
                                                    </StackPanel>

                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
