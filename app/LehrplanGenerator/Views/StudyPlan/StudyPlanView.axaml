<UserControl

    x:Class="LehrplanGenerator.Views.StudyPlan.StudyPlanView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:LehrplanGenerator.ViewModels.StudyPlan"
    xmlns:utils="using:LehrplanGenerator.Logic.Utils.Converter"
    x:DataType="vm:StudyPlanViewModel">

<UserControl.Resources>
    <utils:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
    <utils:TaskCountToBrushConverter x:Key="TaskCountToBrushConverter"/>
    <utils:IntToBoolConverter x:Key="IntToBoolConverter"/>
</UserControl.Resources>


    <Grid Background="{DynamicResource BgPrimary}" RowDefinitions="Auto,*">

        <!--  HEADER  -->
        <Grid Margin="32,24,32,16" ColumnDefinitions="*,Auto,Auto,Auto">

            <TextBlock
                FontSize="24"
                FontWeight="SemiBold"
                Foreground="{DynamicResource TextPrimary}"
                Text="Lernplan" />

            <Button
                Grid.Column="1"
                Classes="secondary"
                Command="{Binding CreateNewPlanCommand}"
                IsEnabled="{Binding !IsLoading}"
                Margin="0,0,12,0">
                <TextBlock Text="➕ Neuer Plan" />
            </Button>

            <Button
                Grid.Column="2"
                Classes="secondary"
                Command="{Binding DeleteStudyPlanCommand}"
                IsEnabled="{Binding SelectedStudyPlan, Converter={x:Static ObjectConverters.IsNotNull}}"
                Margin="0,0,12,0">
                <TextBlock Text="Plan löschen" />
            </Button>

            <Button
                Grid.Column="3"
                Classes="secondary"
                Command="{Binding ToggleViewModeCommand}">
                <TextBlock Text="{Binding CurrentViewModeLabel}" />
            </Button>
        </Grid>

        <!-- CONTENT -->
        <Grid Grid.Row="1">

            <!-- LIST VIEW -->
            <Grid
                Margin="32"
                ColumnDefinitions="300,*"
                IsVisible="{Binding IsListView}">

                <!-- LEFT SIDE -->
                <StackPanel Grid.Column="0" Spacing="16">
                    <ComboBox ItemsSource="{Binding StudyPlans}" SelectedItem="{Binding SelectedStudyPlan}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Title}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <ItemsControl ItemsSource="{Binding Days}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:DayPlanViewModel">
                                <Button
                                    Classes="secondary"
                                    Command="{Binding $parent[UserControl].DataContext.SelectDayCommand}"
                                    CommandParameter="{Binding}">
                                    <StackPanel>
                                        <TextBlock FontWeight="Bold" Text="{Binding DisplayDate}" />
                                        <TextBlock
                                            FontSize="12"
                                            Foreground="{DynamicResource TextMuted}"
                                            Text="{Binding TasksCountLabel}" />
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!-- RIGHT SIDE -->
                <Border
                    Grid.Column="1"
                    Margin="16,0,0,0"
                    Padding="24"
                    Background="{DynamicResource BgSecondary}"
                    BorderBrush="{DynamicResource BorderSubtle}"
                    BorderThickness="1"
                    CornerRadius="16">

                    <StackPanel Spacing="16">
                        <TextBlock
                            FontSize="20"
                            FontWeight="Bold"
                            Text="{Binding SelectedDay.DisplayDate}" />

                        <ItemsControl ItemsSource="{Binding SelectedDay.Tasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:TaskItemViewModel">
                                    <Border
                                        Margin="0,0,0,10"
                                        Padding="12"
                                        Background="{DynamicResource BgPrimary}"
                                        BorderBrush="{DynamicResource BorderSubtle}"
                                        BorderThickness="1"
                                        CornerRadius="10">

                                        <StackPanel>
                                            <TextBlock FontWeight="SemiBold" Text="{Binding Title}" />
                                            <TextBlock
                                                FontSize="12"
                                                Foreground="{DynamicResource TextMuted}"
                                                Text="{Binding Time}" />
                                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                                        </StackPanel>

                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

            </Grid>

           <!-- CONTENT -->
<Grid Grid.Row="1">

    <Border Background="{DynamicResource BgSecondary}"
            BorderBrush="{DynamicResource BorderSubtle}"
            BorderThickness="1"
            CornerRadius="16"
            Padding="12"
            Margin="0,0,0,64"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            MinWidth="300"      
            MaxWidth="800"      
            IsVisible="{Binding IsCalendarView}">

        <Grid RowDefinitions="Auto,*">
    <!-- MONATSNAVIGATION -->
    <StackPanel 
        Grid.Row="0"
        Orientation="Horizontal"
        HorizontalAlignment="Center"
        Spacing="12"
        Margin="0,8,0,4">
        
        <Button Content="◀" Command="{Binding Calendar.PreviousMonthCommand}"
        VerticalAlignment="Center"
        VerticalContentAlignment="Center"/>
        
        <TextBlock FontSize="18"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Text="{Binding Calendar.CurrentMonth, StringFormat='{}{0:MMMM yyyy}'}" />
        
        <Button Content="▶" Command="{Binding Calendar.NextMonthCommand}"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"/>
    </StackPanel>

    <!-- CALENDAR VIEW -->
    <ScrollViewer 
        Grid.Row="1"
        Padding="0" 
        IsVisible="{Binding IsCalendarView}">

        <Border Padding="16,0">
        
        <ItemsControl ItemsSource="{Binding Calendar.Days}" Margin="0,-4,0,-4">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="7" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="vm:DayPlanViewModel">
                  <Button Margin="1, -16" Padding="4"
                    MinWidth="40"    
                    MinHeight="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="{Binding ., Converter={StaticResource TaskCountToBrushConverter}}"
                    Foreground="White"
                    Opacity="{Binding IsCurrentMonth, Converter={StaticResource BoolToOpacityConverter}}"
                    Command="{Binding $parent[UserControl].DataContext.OpenDayViewCommand}"
                    CommandParameter="{Binding}"
                    IsEnabled="{Binding Tasks.Count, Converter={StaticResource IntToBoolConverter}}">

    <StackPanel>
        <TextBlock FontWeight="Bold" Text="{Binding DayNumber}" />
        <TextBlock FontSize="11" Text="{Binding Tasks.Count}"
        IsVisible="{Binding Tasks.Count, Converter={StaticResource IntToBoolConverter}}"/>
    </StackPanel>
</Button>


                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        </Border>
    </ScrollViewer>

 </Grid>
    </Border>

</Grid>

<!-- DAY DETAIL VIEW -->
<Grid Grid.Row="1"
      Margin="16"
      IsVisible="{Binding IsDayDetailView}">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                Padding="0"
                Margin="0">
        <Border Background="{DynamicResource BgSecondary}"
        Padding="16"
        CornerRadius="16"
        Margin="0,0,0,64">

    <StackPanel Spacing="12">

        <!-- Kopfzeile -->
        <StackPanel Spacing="8">
            <Button Content="← Zurück"
                    HorizontalAlignment="Left"
                    Command="{Binding BackToCalendarCommand}" />

            <TextBlock FontSize="22"
                       FontWeight="Bold"
                       Text="{Binding SelectedCalendarDay.DisplayDate}" />
        </StackPanel>

        <!-- Tasks -->
        <ItemsControl ItemsSource="{Binding SelectedCalendarDay.Tasks}">
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="vm:TaskItemViewModel">
                    <Border Padding="12"
                            Margin="0,0,0,8"
                            Background="{DynamicResource BgPrimary}"
                            CornerRadius="8">

                        <StackPanel>
                            <TextBlock FontWeight="SemiBold" Text="{Binding Title}" />
                            <TextBlock Text="{Binding Time}"
                                       Foreground="{DynamicResource TextMuted}" />
                            <TextBlock Text="{Binding Description}"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </StackPanel>
</Border>

    </ScrollViewer>
</Grid>

            

        </Grid>
    </Grid>
</UserControl>
