<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:LehrplanGenerator.Views"
        x:Class="LehrplanGenerator.Views.MainWindow"
        Width="1280" Height="720"
        Title="Lehrplan Generator">

    <StackPanel Margin="20" Spacing="15">

        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Content="Login" x:Name="LoginBtn" Width="120"/>
            <Button Content="Registrieren" x:Name="RegisterBtn" Width="120"/>
        </StackPanel>

        <ContentControl x:Name="MainContent" Margin="0,20,0,0"/>
    </StackPanel>

</Window>
