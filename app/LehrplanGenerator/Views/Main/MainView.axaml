<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LehrplanGenerator.ViewModels.Main"
             mc:Ignorable="d"
             x:Class="LehrplanGenerator.Views.Main.MainView"
             x:DataType="vm:MainViewModel">

    <Grid Background="#0B1120">

        <!-- Card -->
        <Border Width="420"
                Padding="40"
                CornerRadius="18"
                Background="#FFFFFF"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                Opacity="0.98"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel Spacing="28">

                <!-- Header -->
                <StackPanel Spacing="8">
                    <TextBlock Text="{Binding Greeting}"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="#020617"
                               TextAlignment="Center"/>

                    <TextBlock Text="Strukturiert. Persönlich. Effizient lernen."
                               FontSize="14"
                               Foreground="#64748B"
                               TextAlignment="Center"/>
                </StackPanel>

                <!-- Divider -->
                <Border Height="1"
                        Background="#E5E7EB"/>

                <!-- Actions -->
                <StackPanel Spacing="14">

                    <!-- Button bringt Hover/Pressed EFFEKTE AUTOMATISCH mit -->
                    <Button Content="Login"
                            Height="44"
                            Background="#2563EB"
                            Foreground="White"
                            CornerRadius="10"
                            Command="{Binding LoginCommand}"/>

                    <Button Content="Registrieren"
                            Height="44"
                            Background="#F1F5F9"
                            Foreground="#020617"
                            BorderBrush="#CBD5E1"
                            BorderThickness="1"
                            CornerRadius="10"
                            Command="{Binding RegisterCommand}"/>

                </StackPanel>

                <!-- Footer -->
                <TextBlock Text="© 2026 • Lernplattform"
                           FontSize="11"
                           Foreground="#94A3B8"
                           HorizontalAlignment="Center"/>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
