<UserControl
        x:Class="LehrplanGenerator.Views.Main.MainView"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LehrplanGenerator.ViewModels.Main"
        x:DataType="vm:MainViewModel">

        <Grid>

                <!--  ================= DESKTOP LAYOUT =================  -->
                <Grid x:Name="DesktopLayout" IsVisible="True">

                        <Image
                                IsHitTestVisible="False"
                                Source="avares://LehrplanGenerator/Assets/Images/login_background.png"
                                Stretch="UniformToFill" />

                        <Border Background="#66000000" IsHitTestVisible="False" />

                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Border
                                        MaxWidth="920"
                                        Padding="48"
                                        Background="White"
                                        CornerRadius="28">

                                        <StackPanel HorizontalAlignment="Center" Spacing="28">

                                                <TextBlock
                                                        FontSize="40"
                                                        FontWeight="Bold"
                                                        Foreground="#020617"
                                                        Text="KI-gestützter Lehrplangenerator"
                                                        TextAlignment="Center"
                                                        TextWrapping="Wrap" />

                                                <TextBlock
                                                        FontSize="18"
                                                        Foreground="#334155"
                                                        Text="Plane dein Studium so, wie es zu dir passt"
                                                        TextAlignment="Center"
                                                        TextWrapping="Wrap" />

                                                <Grid
                                                        ColumnDefinitions="*,*"
                                                        ColumnSpacing="128"
                                                        HorizontalAlignment="Center">
                                                        <Button
                                                                Grid.Column="0"
                                                                Height="48"
                                                                Background="#1D4ED8"
                                                                Command="{Binding RegisterCommand}"
                                                                CornerRadius="24"
                                                                HorizontalContentAlignment="Center"
                                                                VerticalContentAlignment="Center">

                                                                <TextBlock
                                                                        FontSize="14"
                                                                        FontWeight="SemiBold"
                                                                        Foreground="White"
                                                                        Text="Jetzt starten" />
                                                        </Button>

                                                        <Button
                                                                Grid.Column="1"
                                                                Height="48"
                                                                Background="#1D4ED8"
                                                                Command="{Binding LoginCommand}"
                                                                CornerRadius="24"
                                                                HorizontalContentAlignment="Center"
                                                                VerticalContentAlignment="Center">

                                                                <TextBlock
                                                                        FontSize="14"
                                                                        FontWeight="SemiBold"
                                                                        Foreground="White"
                                                                        Text="Anmelden" />
                                                        </Button>

                                                </Grid>

                                        </StackPanel>
                                </Border>
                        </Grid>

                </Grid>

                <!--  ================= MOBILE LAYOUT =================  -->
                <Grid x:Name="MobileLayout" IsVisible="False">

                        <!--  Background  -->
                        <Image
                                IsHitTestVisible="False"
                                Source="avares://LehrplanGenerator/Assets/Images/login_background.png"
                                Stretch="UniformToFill" />

                        <!--  Stronger overlay for mobile  -->
                        <Border Background="#88000000" IsHitTestVisible="False" />

                        <!--  Centered Card  -->
                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center">

                                <Border
                                        MaxWidth="380"
                                        Margin="16"
                                        Padding="20"
                                        HorizontalAlignment="Center"
                                        Background="White"
                                        CornerRadius="24">

                                        <StackPanel Spacing="18">

                                                <TextBlock
                                                        VerticalAlignment="Center"
                                                        FontSize="22"
                                                        FontWeight="Bold"
                                                        Foreground="#020617"
                                                        Text="KI-gestützter Lehrplangenerator - Mobile"
                                                        TextWrapping="Wrap" />

                                                <TextBlock
                                                        VerticalAlignment="Center"
                                                        FontSize="14"
                                                        Foreground="#475569"
                                                        Text="Plane dein Studium so, wie es zu dir passt"
                                                        TextWrapping="Wrap" />

                                                <Button
                                                        Height="44"
                                                        Background="#1D4ED8"
                                                        Command="{Binding RegisterCommand}"
                                                        CornerRadius="22">

                                                        <TextBlock
                                                                VerticalAlignment="Center"
                                                                FontSize="14"
                                                                FontWeight="SemiBold"
                                                                Foreground="White"
                                                                Text="Jetzt starten" />
                                                </Button>

                                                <Button
                                                        Height="44"
                                                        Background="#1D4ED8"
                                                        Command="{Binding LoginCommand}"
                                                        CornerRadius="22">

                                                        <TextBlock
                                                                VerticalAlignment="Center"
                                                                FontSize="14"
                                                                FontWeight="SemiBold"
                                                                Foreground="White"
                                                                Text="Anmelden" />
                                                </Button>

                                        </StackPanel>
                                </Border>

                        </Grid>

                </Grid>

        </Grid>
</UserControl>
