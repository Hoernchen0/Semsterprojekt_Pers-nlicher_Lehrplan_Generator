<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LehrplanGenerator.ViewModels.Main"
             mc:Ignorable="d"
             x:Class="LehrplanGenerator.Views.Main.MainView"
             x:DataType="vm:MainViewModel">

    
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#0B1120"/>
        </Grid.Background>

        
        <Border Width="420"
                Padding="40"
                Background="#FFFFFF"
                CornerRadius="14"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BoxShadow="0 20 60 0 #90000000">

            <StackPanel Spacing="28">

                
                <StackPanel Spacing="8">

                    <TextBlock Text="{Binding Greeting}"
                               FontSize="30"
                               FontWeight="SemiBold"
                               Foreground="#020617"
                               TextAlignment="Center"/>

                    <TextBlock Text="Strukturiert. Persönlich. Effizient lernen."
                               FontSize="14"
                               Foreground="#64748B"
                               TextAlignment="Center"/>

                </StackPanel>

                
                <Border Height="1"
                        Background="#E5E7EB"
                        Margin="0,8"/>

                
                <StackPanel Spacing="14">

                    
                    <Button Content="Login"
                            Height="46"
                            FontSize="15"
                            FontWeight="Medium"
                            Background="#2563EB"
                            Foreground="White"
                            CornerRadius="10"
                            Command="{Binding LoginCommand}"/>

                    
                    <Button Content="Registrieren"
                            Height="46"
                            FontSize="15"
                            FontWeight="Medium"
                            Background="#F1F5F9"
                            Foreground="#020617"
                            BorderBrush="#CBD5E1"
                            BorderThickness="1"
                            CornerRadius="10"
                            Command="{Binding RegisterCommand}"/>

                </StackPanel>

                
                <TextBlock Text="© 2026 • Lernplattform"
                           FontSize="11"
                           Foreground="#94A3B8"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
