<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:LehrplanGenerator.ViewModels.Settings"
             x:Class="LehrplanGenerator.Views.Settings.SettingsView"
             x:DataType="vm:SettingsViewModel">
    
    <Grid Margin="20">
        <StackPanel Spacing="20">
            
            <TextBlock Text="Einstellungen" 
                       FontSize="28"
                       FontWeight="Bold"/>
            
            <Separator/>
            
            <StackPanel Spacing="15">
                <TextBlock Text="Benutzerkonto" 
                           FontSize="20"
                           FontWeight="SemiBold"/>
                
                <Border Background="#163c45ff"
                        CornerRadius="5"
                        Padding="15">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Account-Aktionen"/>
                        <Button Content="Ausloggen" 
                                Command="{Binding LogOutCommand}"
                                Background="#e74c3c"
                                Foreground="White"
                                Width="150"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
            </StackPanel>
            
            
        </StackPanel>
    </Grid>
    
</UserControl>