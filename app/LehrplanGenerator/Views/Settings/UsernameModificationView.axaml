<Window
    x:Class="LehrplanGenerator.Views.Settings.UsernameModificationView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:LehrplanGenerator.ViewModels.Settings"
    x:DataType="vm:UsernameModificationViewModel"
    Width="420"
    Height="260"
    CanResize="False"
    WindowStartupLocation="CenterOwner"
    Title="Benutzername ändern">

    <StackPanel Margin="24" Spacing="16">

        <TextBlock
            FontSize="20"
            FontWeight="SemiBold"
            Text="Benutzername ändern" />


            <TextBox
            Text="{Binding Username}"
            Watermark="Alter Benutzername" />


            <TextBox
            Text="{Binding Newusername}"
            Watermark="Neuer Benutzername" />


        <TextBlock
            Foreground="{DynamicResource TextError}"
            Text="{Binding ErrorMessage}" />

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="8">

            <Button Content="Abbrechen"
                    Command="{Binding CancelCommand}" />

            <Button Content="Speichern"
                    Command="{Binding EditUsernameCommand}" />
        </StackPanel>
    </StackPanel>
</Window>
