<UserControl
    x:Class="LehrplanGenerator.Views.Guide.GuideView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:LehrplanGenerator.ViewModels.Guide"
    x:DataType="vm:GuideViewModel">

    <Grid>

        <!--  ================= DESKTOP =================  -->
        <Grid x:Name="DesktopLayout">

            <!--  Background  -->
            <Image Source="avares://LehrplanGenerator/Assets/Images/test.jpg" Stretch="UniformToFill" />

            <Border Background="{DynamicResource OverlayStrong}" />

            <ScrollViewer VerticalScrollBarVisibility="Auto">

                <Grid
                    Margin="24"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

                    <StackPanel HorizontalAlignment="Center" Spacing="32">

                        <!--  Header  -->
                        <StackPanel HorizontalAlignment="Center" Spacing="12">
                            <Border
                                Width="96"
                                Height="96"
                                Background="{DynamicResource BgPrimary}"
                                CornerRadius="48">
                                <Image
                                    Margin="16"
                                    Source="avares://LehrplanGenerator/Assets/Images/logo.png"
                                    Stretch="Uniform" />
                            </Border>

                            <TextBlock
                                FontSize="26"
                                FontWeight="Bold"
                                Foreground="{DynamicResource TextOnAccent}"
                                Text="Lehrplangenerator"
                                TextAlignment="Center" />

                            <TextBlock
                                FontSize="14"
                                Foreground="{DynamicResource TextOnAccentSecondary}"
                                Text="Grunddaten zum Studium festlegen"
                                TextAlignment="Center" />
                        </StackPanel>

                        <!--  Card  -->
                        <Border
                            Width="640"
                            Padding="40"
                            Background="{DynamicResource BgSecondary}"
                            CornerRadius="16">

                            <StackPanel Spacing="26">
                                <TextBlock
                                    FontSize="22"
                                    FontWeight="SemiBold"
                                    Text="Grunddaten zum Studium"
                                    TextAlignment="Center" />

                                <!--  Form  -->
                                <StackPanel Spacing="18">

                                    <!--  Studiengang  -->
                                    <StackPanel Spacing="6">
                                        <TextBlock FontWeight="SemiBold" Text="Studiengang *" />
                                        <ComboBox
                                            ItemsSource="{Binding StudyPrograms}"
                                            PlaceholderText="Bitte Studiengang auswählen"
                                            SelectedItem="{Binding SelectedStudyProgram}" />
                                        <TextBlock
                                            Foreground="{DynamicResource TextError}"
                                            IsVisible="{Binding ShowStudyProgramError}"
                                            Text="Bitte wähle einen Studiengang aus." />
                                    </StackPanel>

                                    <!--  Semester  -->
                                    <StackPanel Spacing="6">
                                        <TextBlock FontWeight="SemiBold" Text="Aktuelles Semester *" />
                                        <ComboBox
                                            ItemsSource="{Binding Semesters}"
                                            PlaceholderText="Bitte Semester auswählen"
                                            SelectedItem="{Binding SelectedSemester}" />
                                        <TextBlock
                                            Foreground="{DynamicResource TextError}"
                                            IsVisible="{Binding ShowSemesterError}"
                                            Text="Bitte wähle dein aktuelles Semester aus." />
                                    </StackPanel>

                                    <!--  PDF  -->
                                    <StackPanel Spacing="6">
                                        <TextBlock FontWeight="SemiBold" Text="Stundenplan (optional)" />
                                        <Button Classes="secondary" Content="PDF auswählen" />
                                    </StackPanel>
                                </StackPanel>

                                <!--  Action  -->
                                <StackPanel HorizontalAlignment="Right">
                                    <Button
                                        Classes="primary"
                                        Command="{Binding GenerateCommand}"
                                        Content="Profil vervollständigen" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Grid>

        <!--  ================= MOBILE =================  -->
        <Grid x:Name="MobileLayout">

            <!--  Background  -->
            <Image Source="avares://LehrplanGenerator/Assets/Images/test.jpg" Stretch="UniformToFill" />

            <Border Background="{DynamicResource OverlayStrong}" />

            <ScrollViewer VerticalScrollBarVisibility="Auto">

                <StackPanel Margin="16" Spacing="20">

                    <!--  Header kompakt  -->
                    <StackPanel HorizontalAlignment="Center" Spacing="8">
                        <Border
                            Width="72"
                            Height="72"
                            Background="{DynamicResource BgPrimary}"
                            CornerRadius="36">
                            <Image
                                Margin="12"
                                Source="avares://LehrplanGenerator/Assets/Images/logo.png"
                                Stretch="Uniform" />
                        </Border>

                        <TextBlock
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="{DynamicResource TextOnAccent}"
                            Text="Grunddaten" />
                    </StackPanel>

                    <!--  Mobile Card  -->
                    <Border
                        Padding="20"
                        Background="{DynamicResource BgSecondary}"
                        CornerRadius="16">

                        <StackPanel Spacing="16">

                            <TextBlock
                                FontSize="18"
                                FontWeight="SemiBold"
                                Text="Studium konfigurieren" />

                            <!--  Studiengang  -->
                            <ComboBox
                                ItemsSource="{Binding StudyPrograms}"
                                PlaceholderText="Studiengang auswählen"
                                SelectedItem="{Binding SelectedStudyProgram}" />

                            <TextBlock
                                Foreground="{DynamicResource TextError}"
                                IsVisible="{Binding ShowStudyProgramError}"
                                Text="Studiengang fehlt" />

                            <!--  Semester  -->
                            <ComboBox
                                ItemsSource="{Binding Semesters}"
                                PlaceholderText="Semester auswählen"
                                SelectedItem="{Binding SelectedSemester}" />

                            <TextBlock
                                Foreground="{DynamicResource TextError}"
                                IsVisible="{Binding ShowSemesterError}"
                                Text="Semester fehlt" />

                            <!--  PDF  -->
                            <Button Classes="secondary" Content="PDF auswählen (optional)" />

                            <!--  Action  -->
                            <Button
                                Height="48"
                                Classes="primary"
                                Command="{Binding GenerateCommand}"
                                Content="Profil vervollständigen" />
                        </StackPanel>
                    </Border>

                    <Border Height="24" />
                </StackPanel>
            </ScrollViewer>
        </Grid>

    </Grid>
</UserControl>
