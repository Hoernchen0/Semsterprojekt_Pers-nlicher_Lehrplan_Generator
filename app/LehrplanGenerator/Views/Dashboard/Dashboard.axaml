<UserControl
    x:Class="LehrplanGenerator.Views.Dashboard.DashboardView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:LehrplanGenerator.ViewModels.Dashboard"
    x:DataType="vm:DashboardViewModel">

    <Grid Background="{DynamicResource BgPrimary}">

        <!--  ================= DESKTOP =================  -->
        <Grid x:Name="DesktopLayout">

            <Border Padding="32" Background="{DynamicResource BgPrimary}">
                <Grid RowDefinitions="Auto,Auto,*">

                    <!--  HEADER  -->
                    <StackPanel Spacing="6">
                        <TextBlock
                            FontSize="28"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextPrimary}"
                            Text="Dashboard" />

                        <TextBlock
                            FontSize="14"
                            Foreground="{DynamicResource TextMuted}"
                            Text="{Binding WelcomeMessage}" />
                    </StackPanel>

                    <!--  CTA: Lernplan erstellen  -->
                    <Border
                        Grid.Row="1"
                        Margin="0,24,0,0"
                        Padding="28"
                        Background="{DynamicResource BgSecondary}"
                        CornerRadius="18"
                        IsVisible="{Binding HasNoStudyPlans}">

                        <StackPanel Spacing="12">
                            <TextBlock
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource TextPrimary}"
                                Text="Starte deinen ersten Lernplan" />

                            <TextBlock
                                FontSize="14"
                                Foreground="{DynamicResource TextMuted}"
                                Text="Erstelle jetzt einen personalisierten Lernplan und leg direkt los." />

                            <Button
                                Height="48"
                                Classes="primary"
                                Command="{Binding CreateStudyPlanCommand}"
                                Content="Lernplan erstellen"
                                FontSize="16" />
                        </StackPanel>
                    </Border>

                    <!--  CONTENT  -->
                    <Grid
                        Grid.Row="2"
                        Margin="0,24,0,0"
                        ColumnDefinitions="1*,1*"
                        ColumnSpacing="24"
                        RowDefinitions="Auto,Auto"
                        RowSpacing="24">

                        <!--  Lernfortschritt  -->
                        <Border
                            Grid.Row="0"
                            Grid.Column="0"
                            Padding="24"
                            Background="{DynamicResource BgSecondary}"
                            CornerRadius="16">

                            <StackPanel Spacing="14">
                                <TextBlock
                                    FontSize="18"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource TextPrimary}"
                                    Text="Lernfortschritt" />

                                <ProgressBar
                                    Height="10"
                                    Maximum="100"
                                    Value="{Binding ProgressPercent}" />

                                <TextBlock
                                    FontSize="13"
                                    Foreground="{DynamicResource TextMuted}"
                                    Text="{Binding ProgressPercent, StringFormat='{}{0} % des aktuellen Lernplans abgeschlossen'}" />
                            </StackPanel>
                        </Border>

                        <!--  Nächste Lerneinheit  -->
                        <Border
                            Grid.Row="0"
                            Grid.Column="1"
                            Padding="24"
                            Background="{DynamicResource BgSecondary}"
                            CornerRadius="16">

                            <StackPanel Spacing="12">
                                <TextBlock
                                    FontSize="18"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource TextPrimary}"
                                    Text="Nächste Lerneinheit" />

                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextPrimary}"
                                    Text="{Binding NextUnitTitle}" />

                                <TextBlock
                                    FontSize="13"
                                    Foreground="{DynamicResource TextMuted}"
                                    Text="{Binding NextUnitTime}" />

                                <Button
                                    Height="40"
                                    Classes="primary"
                                    Command="{Binding ContinueLearningCommand}"
                                    Content="Weiterlernen"
                                    IsVisible="{Binding HasNextUnit}" />
                            </StackPanel>
                        </Border>

                        <!--  Aktive Lernpläne  -->
                        
                        <Border
                            Grid.Row="1"
                            Grid.Column="0"
                            Padding="20"
                            Background="{DynamicResource BgSecondary}"
                            CornerRadius="16">

                            <StackPanel Spacing="12">
                                <TextBlock
                                    FontSize="18"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource TextPrimary}"
                                    Text="Aktive Lernpläne" />

                                <ListBox
                                    Height="300"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ItemsSource="{Binding ActiveStudyPlans}"
                                    SelectedItem="{Binding SelectedStudyPlan}"
                                   ScrollViewer.VerticalScrollBarVisibility="Auto"
                                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                                    <ListBox.Styles>
                                        <Style Selector="ListBoxItem">
                                            <Setter Property="Padding" Value="0,1" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="CornerRadius" Value="10" />
                                            <Setter Property="BorderThickness" Value="2" />
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                        </Style>
                                        <Style Selector="ListBoxItem:pointerover">
                                            <Setter Property="Background" Value="#10059669" />
                                        </Style>
                                        <Style Selector="ListBoxItem:selected">
                                            <Setter Property="Background" Value="#20059669" />
                                            <Setter Property="BorderBrush" Value="#059669" />
                                        </Style>
                                    </ListBox.Styles>

                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border
                                                Margin="0,0,0,0"
                                                Padding="12"
                                                Background="{DynamicResource BgPrimary}"
                                                CornerRadius="10">

                                                <StackPanel Spacing="4">
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Foreground="{DynamicResource TextPrimary}"
                                                        Text="{Binding Title}" />

                                                    <TextBlock
                                                        FontSize="12"
                                                        Foreground="{DynamicResource TextMuted}"
                                                        Text="Klicken zum Fortsetzen" />
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>

                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!--  ================= MOBILE =================  -->
        <ScrollViewer x:Name="MobileLayout" VerticalScrollBarVisibility="Auto">

            <StackPanel Margin="16" Spacing="16">

                <!--  ================= HEADER =================  -->
                <StackPanel Spacing="4">
                    <TextBlock
                        FontSize="22"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource TextPrimary}"
                        Text="Dashboard" />

                    <TextBlock
                        FontSize="13"
                        Foreground="{DynamicResource TextMuted}"
                        Text="{Binding WelcomeMessage}" />
                </StackPanel>

                <!--  ================= CTA =================  -->
                <Border
                    Padding="16"
                    Background="{DynamicResource BgSecondary}"
                    CornerRadius="14"
                    IsVisible="{Binding HasNoStudyPlans}">

                    <StackPanel Spacing="10">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextPrimary}"
                            Text="Ersten Lernplan erstellen" />

                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextMuted}"
                            Text="Starte mit einem personalisierten Lernplan." />

                        <Button
                            Height="44"
                            Classes="primary"
                            Command="{Binding CreateStudyPlanCommand}"
                            Content="Lernplan erstellen" />
                    </StackPanel>
                </Border>

                <!--  ================= FORTSCHRITT =================  -->
                <Border
                    Padding="16"
                    Background="{DynamicResource BgSecondary}"
                    CornerRadius="14">

                    <StackPanel Spacing="10">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="{DynamicResource TextPrimary}"
                            Text="Lernfortschritt" />

                        <ProgressBar
                            Height="8"
                            Maximum="100"
                            Value="{Binding ProgressPercent}" />

                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextMuted}"
                            Text="{Binding ProgressPercent, StringFormat='{}{0}% abgeschlossen'}" />
                    </StackPanel>
                </Border>

                <!--  ================= NÄCHSTE EINHEIT =================  -->
                <Border
                    Padding="16"
                    Background="{DynamicResource BgSecondary}"
                    CornerRadius="14">

                    <StackPanel Spacing="8">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="{DynamicResource TextPrimary}"
                            Text="Nächste Lerneinheit" />

                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextPrimary}"
                            Text="{Binding NextUnitTitle}" />

                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextMuted}"
                            Text="{Binding NextUnitTime}" />

                        <Button
                            Height="44"
                            Classes="primary"
                            Command="{Binding ContinueLearningCommand}"
                            Content="Weiterlernen"
                            IsVisible="{Binding HasNextUnit}" />
                    </StackPanel>
                </Border>

                <!--  ================= AKTIVE LERNPLÄNE =================  -->
                <Border
                    Padding="16"
                    Background="{DynamicResource BgSecondary}"
                    CornerRadius="14">

                    <StackPanel Spacing="10">
                        <TextBlock
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="{DynamicResource TextPrimary}"
                            Text="Aktive Lernpläne" />

                        <ListBox
                            Background="Transparent"
                            BorderThickness="0"
                            ItemsSource="{Binding ActiveStudyPlans}"
                            SelectedItem="{Binding SelectedStudyPlan}"
                            SelectionMode="Single">

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0,0,0,8"
                                        Padding="12"
                                        Background="{DynamicResource BgPrimary}"
                                        CornerRadius="10">

                                        <StackPanel Spacing="2">
                                            <TextBlock
                                                FontSize="13"
                                                FontWeight="SemiBold"
                                                Foreground="{DynamicResource TextPrimary}"
                                                Text="{Binding Title}" />

                                            <TextBlock
                                                FontSize="11"
                                                Foreground="{DynamicResource TextMuted}"
                                                Text="Tippen zum Fortsetzen" />
                                        </StackPanel>

                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>

                        </ListBox>
                    </StackPanel>
                </Border>

                <!--  ================= BOTTOM SPACER =================  -->
                <!--  WICHTIG: sorgt dafür, dass letzter Inhalt IMMER über der Taskleiste endet  -->
                <Border Height="120" />

            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
