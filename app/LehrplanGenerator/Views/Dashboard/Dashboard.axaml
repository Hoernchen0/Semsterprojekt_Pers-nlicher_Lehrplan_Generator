<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LehrplanGenerator.ViewModels.Dashboard"
             mc:Ignorable="d"
             x:Class="LehrplanGenerator.Views.Dashboard.DashboardView"
             x:DataType="vm:DashboardViewModel">

    <!-- ÄUSSERER CONTAINER MIT PADDING -->
    <Border Background="#F8FAFC"
            Padding="32">

        <Grid RowDefinitions="Auto,*">

            <!-- Header -->
            <StackPanel Spacing="6">
                <TextBlock Text="Dashboard"
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="#020617"/>

                <TextBlock Text="Willkommen zurück – dein Lernfortschritt im Überblick"
                           FontSize="14"
                           Foreground="#475569"/>
            </StackPanel>

            <!-- Content -->
            <Grid Grid.Row="1"
                  Margin="0,24,0,0"
                  ColumnDefinitions="2*,1*"
                  RowDefinitions="Auto,*"
                  ColumnSpacing="24"
                  RowSpacing="24">

                <!-- Lernfortschritt -->
                <Border Background="#FFFFFF"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="24">

                    <StackPanel Spacing="14">
                        <TextBlock Text="Lernfortschritt"
                                   FontSize="18"
                                   FontWeight="Medium"
                                   Foreground="#020617"/>

                        <ProgressBar Value="65"
                                     Maximum="100"
                                     Height="10"
                                     Background="#E5E7EB"
                                     Foreground="#2563EB"/>

                        <TextBlock Text="65 % des aktuellen Lernplans abgeschlossen"
                                   FontSize="13"
                                   Foreground="#64748B"/>
                    </StackPanel>
                </Border>

                <!-- Nächste Lerneinheit -->
                <Border Grid.Column="1"
                        Background="#FFFFFF"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="24">

                    <StackPanel Spacing="12">
                        <TextBlock Text="Nächste Lerneinheit"
                                   FontSize="18"
                                   FontWeight="Medium"
                                   Foreground="#020617"/>

                        <TextBlock Text="Betriebssysteme – Threads und Synchronisation"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#020617"/>

                        <TextBlock Text="Heute • 45 Minuten"
                                   FontSize="13"
                                   Foreground="#64748B"/>

                        <Button Content="Weiterlernen"
                                Height="40"
                                Background="#1D4ED8"
                                Foreground="White"
                                CornerRadius="10"
                                HorizontalContentAlignment="Center"
                                Theme="{x:Null}"/>
                    </StackPanel>
                </Border>

                <!-- Aktive Lernpläne -->
                <Border Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Background="#FFFFFF"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="16"
                        Padding="24">

                    <StackPanel Spacing="16">

                        <TextBlock Text="Aktive Lernpläne"
                                   FontSize="18"
                                   FontWeight="Medium"
                                   Foreground="#020617"/>

                        <Border Background="#F8FAFC"
                                BorderBrush="#E5E7EB"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="16">
                            <StackPanel Spacing="6">
                                <TextBlock Text="Algorithmen und Datenstrukturen"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="#020617"/>
                                <TextBlock Text="Fortschritt: 40 %"
                                           FontSize="13"
                                           Foreground="#64748B"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#F8FAFC"
                                BorderBrush="#E5E7EB"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="16">
                            <StackPanel Spacing="6">
                                <TextBlock Text="Netzwerke und Protokolle"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="#020617"/>
                                <TextBlock Text="Fortschritt: 70 %"
                                           FontSize="13"
                                           Foreground="#64748B"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Border>

            </Grid>
        </Grid>
    </Border>
</UserControl>
