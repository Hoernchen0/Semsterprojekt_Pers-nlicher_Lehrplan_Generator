<UserControl
    x:Class="LehrplanGenerator.Views.Dashboard.DashboardView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:LehrplanGenerator.ViewModels.Dashboard"
    x:DataType="vm:DashboardViewModel">

    <Grid>

        <!--  ================= DESKTOP =================  -->
        <Border
            x:Name="DesktopLayout"
            Padding="32"
            Background="#F8FAFC">

            <Grid RowDefinitions="Auto,*">

                <!--  Header  -->
                <StackPanel Spacing="6">
                    <TextBlock
                        FontSize="28"
                        FontWeight="SemiBold"
                        Foreground="#020617"
                        Text="Dashboard" />

                    <TextBlock
                        FontSize="14"
                        Foreground="#475569"
                        Text="{Binding WelcomeMessage}" />
                </StackPanel>

                <!--  Content  -->
                <Grid
                    Grid.Row="1"
                    Margin="0,24,0,0"
                    ColumnDefinitions="2*,1*"
                    ColumnSpacing="24"
                    RowDefinitions="Auto,*"
                    RowSpacing="24">

                    <!--  Lernfortschritt  -->
                    <Border
                        Padding="24"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="16">

                        <StackPanel Spacing="14">
                            <TextBlock
                                FontSize="18"
                                FontWeight="Medium"
                                Foreground="#020617"
                                Text="Lernfortschritt" />

                            <ProgressBar
                                Height="10"
                                Maximum="100"
                                Value="{Binding ProgressPercent}" />

                            <TextBlock
                                FontSize="13"
                                Foreground="#64748B"
                                Text="{Binding ProgressPercent, StringFormat='{}{0} % des aktuellen Lernplans abgeschlossen'}" />
                        </StackPanel>
                    </Border>

                    <!--  N채chste Einheit  -->
                    <Border
                        Grid.Column="1"
                        Padding="24"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="16">

                        <StackPanel Spacing="12">
                            <TextBlock
                                FontSize="18"
                                FontWeight="Medium"
                                Foreground="#020617"
                                Text="N채chste Lerneinheit" />

                            <TextBlock
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="#020617"
                                Text="{Binding NextUnitTitle}" />

                            <TextBlock
                                FontSize="13"
                                Foreground="#64748B"
                                Text="{Binding NextUnitTime}" />

                            <Button
                                Height="40"
                                Background="#2563EB"
                                Command="{Binding ContinueLearningCommand}"
                                Content="Weiterlernen"
                                CornerRadius="10"
                                Foreground="White"
                                IsEnabled="{Binding SelectedStudyPlan}" />
                        </StackPanel>
                    </Border>

                    <!--  Aktive Lernpl채ne  -->
                    <Border
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Padding="24"
                        Background="White"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        CornerRadius="16">

                        <StackPanel Spacing="16">
                            <TextBlock
                                FontSize="18"
                                FontWeight="Medium"
                                Foreground="#020617"
                                Text="Aktive Lernpl채ne" />

                            <ListBox
                                Background="Transparent"
                                BorderThickness="0"
                                ItemsSource="{Binding ActiveStudyPlans}"
                                SelectedItem="{Binding SelectedStudyPlan}">

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="0,0,0,8"
                                            Padding="16"
                                            Background="#F8FAFC"
                                            CornerRadius="12">

                                            <StackPanel>
                                                <TextBlock
                                                    FontWeight="SemiBold"
                                                    Foreground="#020617"
                                                    Text="{Binding Title}" />

                                                <TextBlock
                                                    FontSize="13"
                                                    Foreground="#64748B"
                                                    Text="Klicken, um diesen Lernplan fortzusetzen" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>

                </Grid>
            </Grid>
        </Border>

        <!--  ================= MOBILE =================  -->
        <ScrollViewer
            x:Name="MobileLayout"
            Padding="16"
            Background="#F8FAFC">

            <StackPanel Spacing="16">

                <TextBlock
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="#020617"
                    Text="Dashboard" />

                <TextBlock
                    FontSize="13"
                    Foreground="#475569"
                    Text="{Binding WelcomeMessage}" />

                <Border
                    Padding="16"
                    Background="White"
                    CornerRadius="14">
                    <StackPanel Spacing="10">
                        <TextBlock
                            FontWeight="SemiBold"
                            Foreground="#020617"
                            Text="Lernfortschritt" />

                        <ProgressBar
                            Height="8"
                            Maximum="100"
                            Value="{Binding ProgressPercent}" />

                        <TextBlock
                            FontSize="12"
                            Foreground="#64748B"
                            Text="{Binding ProgressPercent, StringFormat='{}{0} % abgeschlossen'}" />
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
