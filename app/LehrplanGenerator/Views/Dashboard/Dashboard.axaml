<UserControl
    x:Class="LehrplanGenerator.Views.Dashboard.DashboardView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:LehrplanGenerator.ViewModels.Dashboard"
    x:DataType="vm:DashboardViewModel">

    <Grid Background="{DynamicResource BgPrimary}">

        <!--  ================= DESKTOP =================  -->
        <Grid x:Name="DesktopLayout">

            <Border Padding="32" Background="{DynamicResource BgPrimary}">
                <Grid RowDefinitions="Auto,*">

                    <!--  HEADER  -->
                    <StackPanel Spacing="6">
                        <TextBlock
                            FontSize="28"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextPrimary}"
                            Text="Dashboard" />

                        <TextBlock
                            FontSize="14"
                            Foreground="{DynamicResource TextMuted}"
                            Text="{Binding WelcomeMessage}" />
                    </StackPanel>

                    <!--  CONTENT  -->
                    <Grid
                        Grid.Row="1"
                        Margin="0,24,0,0"
                        ColumnDefinitions="1*,1*"
                        ColumnSpacing="24"
                        RowDefinitions="Auto,Auto"
                        RowSpacing="24">

                        <!--  Lernfortschritt  -->
                        <Border
                            Grid.Row="0"
                            Grid.Column="0"
                            Padding="24"
                            Background="{DynamicResource BgSecondary}"
                            CornerRadius="16">

                            <StackPanel Spacing="14">
                                <TextBlock
                                    FontSize="18"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource TextPrimary}"
                                    Text="Lernfortschritt" />

                                <ProgressBar
                                    Height="10"
                                    Maximum="100"
                                    Value="{Binding ProgressPercent}" />

                                <TextBlock
                                    FontSize="13"
                                    Foreground="{DynamicResource TextMuted}"
                                    Text="{Binding ProgressPercent, StringFormat='{}{0} % des aktuellen Lernplans abgeschlossen'}" />
                            </StackPanel>
                        </Border>

                        <!--  Nächste Lerneinheit  -->
                        <Border
                            Grid.Row="0"
                            Grid.Column="1"
                            Padding="24"
                            Background="{DynamicResource BgSecondary}"
                            CornerRadius="16">

                            <StackPanel Spacing="12">
                                <TextBlock
                                    FontSize="18"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource TextPrimary}"
                                    Text="Nächste Lerneinheit" />

                                <TextBlock
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextPrimary}"
                                    Text="{Binding NextUnitTitle}" />

                                <TextBlock
                                    FontSize="13"
                                    Foreground="{DynamicResource TextMuted}"
                                    Text="{Binding NextUnitTime}" />

                                <Button
                                    Height="40"
                                    Classes="primary"
                                    Command="{Binding ContinueLearningCommand}"
                                    Content="Weiterlernen"
                                    IsEnabled="{Binding SelectedStudyPlan}" />
                            </StackPanel>
                        </Border>

                        <!--  Aktive Lernpläne  -->
                        <Border
                            Grid.Row="1"
                            Grid.Column="0"
                            Padding="20"
                            Background="{DynamicResource BgSecondary}"
                            CornerRadius="16">

                            <StackPanel Spacing="12">
                                <TextBlock
                                    FontSize="18"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource TextPrimary}"
                                    Text="Aktive Lernpläne" />

                                <ListBox
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ItemsSource="{Binding ActiveStudyPlans}"
                                    SelectedItem="{Binding SelectedStudyPlan}">

                                    <ListBox.Styles>
                                        <Style Selector="ListBoxItem">
                                            <Setter Property="Padding" Value="0,1" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="CornerRadius" Value="10" />
                                            <Setter Property="BorderThickness" Value="2" />
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                        </Style>
                                        <Style Selector="ListBoxItem:pointerover">
                                            <Setter Property="Background" Value="#10059669" />
                                        </Style>
                                        <Style Selector="ListBoxItem:selected">
                                            <Setter Property="Background" Value="#20059669" />
                                            <Setter Property="BorderBrush" Value="#059669" />
                                        </Style>
                                    </ListBox.Styles>

                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border
                                                Margin="0,0,0,0"
                                                Padding="12"
                                                Background="{DynamicResource BgPrimary}"
                                                CornerRadius="10">

                                                <StackPanel Spacing="4">
                                                    <TextBlock
                                                        FontSize="14"
                                                        FontWeight="SemiBold"
                                                        Foreground="{DynamicResource TextPrimary}"
                                                        Text="{Binding Title}" />

                                                    <TextBlock
                                                        FontSize="12"
                                                        Foreground="{DynamicResource TextMuted}"
                                                        Text="Klicken zum Fortsetzen" />
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>

                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!--  ================= MOBILE =================  -->
        <ScrollViewer x:Name="MobileLayout" VerticalScrollBarVisibility="Auto">

            <Border Padding="16">
                <StackPanel Spacing="16">

                    <!--  HEADER  -->
                    <StackPanel Spacing="4">
                        <TextBlock
                            FontSize="22"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextPrimary}"
                            Text="Dashboard" />

                        <TextBlock
                            FontSize="13"
                            Foreground="{DynamicResource TextMuted}"
                            Text="{Binding WelcomeMessage}" />
                    </StackPanel>

                    <!--  Lernfortschritt  -->
                    <Border
                        Padding="16"
                        Background="{DynamicResource BgSecondary}"
                        CornerRadius="14">

                        <StackPanel Spacing="10">
                            <TextBlock
                                FontSize="16"
                                FontWeight="Medium"
                                Foreground="{DynamicResource TextPrimary}"
                                Text="Lernfortschritt" />

                            <ProgressBar
                                Height="8"
                                Maximum="100"
                                Value="{Binding ProgressPercent}" />

                            <TextBlock
                                FontSize="12"
                                Foreground="{DynamicResource TextMuted}"
                                Text="{Binding ProgressPercent, StringFormat='{}{0}% abgeschlossen'}" />
                        </StackPanel>
                    </Border>

                    <!--  Nächste Lerneinheit  -->
                    <Border
                        Padding="16"
                        Background="{DynamicResource BgSecondary}"
                        CornerRadius="14">

                        <StackPanel Spacing="8">
                            <TextBlock
                                FontSize="16"
                                FontWeight="Medium"
                                Foreground="{DynamicResource TextPrimary}"
                                Text="Nächste Lerneinheit" />

                            <TextBlock
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource TextPrimary}"
                                Text="{Binding NextUnitTitle}" />

                            <TextBlock
                                FontSize="12"
                                Foreground="{DynamicResource TextMuted}"
                                Text="{Binding NextUnitTime}" />

                            <Button
                                Height="44"
                                Classes="primary"
                                Command="{Binding ContinueLearningCommand}"
                                Content="Weiterlernen"
                                IsEnabled="{Binding SelectedStudyPlan}" />
                        </StackPanel>
                    </Border>

                    <!--  Aktive Lernpläne  -->
                    <Border
                        Padding="16"
                        Background="{DynamicResource BgSecondary}"
                        CornerRadius="14">

                        <StackPanel Spacing="10">
                            <TextBlock
                                FontSize="16"
                                FontWeight="Medium"
                                Foreground="{DynamicResource TextPrimary}"
                                Text="Aktive Lernpläne" />

                            <ListBox
                                Background="Transparent"
                                BorderThickness="0"
                                ItemsSource="{Binding ActiveStudyPlans}"
                                SelectedItem="{Binding SelectedStudyPlan}">

                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="0,0,0,8"
                                            Padding="12"
                                            Background="{DynamicResource BgPrimary}"
                                            CornerRadius="10">

                                            <StackPanel Spacing="2">
                                                <TextBlock
                                                    FontSize="13"
                                                    FontWeight="SemiBold"
                                                    Foreground="{DynamicResource TextPrimary}"
                                                    Text="{Binding Title}" />

                                                <TextBlock
                                                    FontSize="11"
                                                    Foreground="{DynamicResource TextMuted}"
                                                    Text="Tippen zum Fortsetzen" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Border>
        </ScrollViewer>

    </Grid>
</UserControl>
