<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:LehrplanGenerator.ViewModels.Auth"
             x:Class="LehrplanGenerator.Views.Auth.RegisterView"
             x:DataType="vm:RegisterViewModel">

     <StackPanel Margin="20" Spacing="12">
        <TextBlock Text="ðŸ“š LernApp - Registrierung" FontSize="24" FontWeight="Bold" Foreground="#1E88E5"/>
        <Separator/>

        <StackPanel Spacing="5">
            <TextBlock Text="Vorname:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding FirstName}" Watermark="Vorname" Height="40" Padding="10"/>
        </StackPanel>

        <StackPanel Spacing="5">
            <TextBlock Text="Nachname:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding LastName}" Watermark="Nachname" Height="40" Padding="10"/>
        </StackPanel>

        <StackPanel Spacing="5">
            <TextBlock Text="E-Mail:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding Email}" Watermark="ihre@email.com" Height="40" Padding="10"/>
        </StackPanel>

        <StackPanel Spacing="5">
            <TextBlock Text="Passwort:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding Password}" PasswordChar="â€¢" Watermark="Min. 6 Zeichen" Height="40" Padding="10"/>
        </StackPanel>

        <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" IsVisible="{Binding ErrorMessage.Length}"/>

        <Button Content="Registrieren"
                Width="160"
                Height="40"
                Command="{Binding RegisterCommand}"
                Background="#1E88E5"
                Foreground="White"
                FontWeight="Bold" />

        <Button Content="ZurÃ¼ck zur Anmeldung"
                Width="200"
                Height="35"
                Command="{Binding MenuCommand}"
                Background="Transparent"
                Foreground="#1E88E5" />
    </StackPanel>

</UserControl>

