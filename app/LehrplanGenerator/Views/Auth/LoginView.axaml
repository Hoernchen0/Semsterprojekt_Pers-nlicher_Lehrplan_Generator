<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:LehrplanGenerator.ViewModels.Auth"
             x:Class="LehrplanGenerator.Views.Auth.LoginView"
             x:DataType="vm:LoginViewModel">

    <StackPanel Margin="20" Spacing="12">
        <TextBlock Text="Login" FontSize="28"/>

        <TextBox Text="{Binding Email}" Watermark="E-Mail" Width="250"/>
        <TextBox Text="{Binding Password}" Watermark="Passwort" PasswordChar="*" Width="250"/>

        <Button Content="Login"
                Width="160"
                Command="{Binding LoginCommand}"/>

         <Button Content="Abbrechen"
                Width="160"
                Command="{Binding CancelCommand}"/>

        <TextBlock Text="{Binding Result}" FontSize="18" />
    </StackPanel>

</UserControl>