<UserControl
    x:Class="LehrplanGenerator.Views.Auth.LoginView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:LehrplanGenerator.ViewModels.Auth"
    x:DataType="vm:LoginViewModel">

    <!--  ================= PAGE =================  -->
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <!--  Background Image  -->
        <Image Source="avares://LehrplanGenerator/Assets/Images/test.jpg" Stretch="UniformToFill" />

        <!--  Centered Card  -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid
                Margin="24"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <Border
                    Width="440"
                    Padding="40"
                    Background="{DynamicResource BgSecondary}"
                    CornerRadius="24">

                    <StackPanel Spacing="28">

                        <!--  ================= HEADER =================  -->
                        <StackPanel Spacing="8">
                            <TextBlock
                                FontSize="28"
                                FontWeight="Bold"
                                Foreground="{DynamicResource TextPrimary}"
                                Text="Willkommen zurÃ¼ck"
                                TextAlignment="Center" />

                            <TextBlock
                                FontSize="14"
                                Foreground="{DynamicResource TextMuted}"
                                Text="Melde dich an, um fortzufahren"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </StackPanel>

                        <!--  ================= FORM =================  -->
                        <StackPanel Spacing="16">

                            <StackPanel Spacing="6">
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextPrimary}"
                                    Text="Benutzername" />
                                <TextBox Text="{Binding Username}" Watermark="Benutzername" />
                            </StackPanel>

                            <StackPanel Spacing="6">
                                <TextBlock
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="{DynamicResource TextPrimary}"
                                    Text="Passwort" />
                                <TextBox
                                    PasswordChar="*"
                                    Text="{Binding Password}"
                                    Watermark="Passwort" />
                            </StackPanel>

                        </StackPanel>

                        <!--  ================= PRIMARY ACTION =================  -->
                        <Button
                            Classes="primary"
                            Command="{Binding LoginCommand}"
                            Content="Anmelden" />

                        <!--  ================= SECONDARY ACTION =================  -->
                        <Button
                            HorizontalAlignment="Center"
                            Classes="link"
                            Command="{Binding CancelCommand}">
                            <TextBlock Text="Abbrechen" />
                        </Button>

                        <!--  ================= RESULT =================  -->
                        <TextBlock
                            FontSize="13"
                            Foreground="{DynamicResource TextMuted}"
                            Text="{Binding Result}"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />

                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

    </Grid>
</UserControl>
