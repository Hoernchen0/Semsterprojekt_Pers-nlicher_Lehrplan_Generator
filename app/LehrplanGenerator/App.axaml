<Application
    x:Class="LehrplanGenerator.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LehrplanGenerator"
    RequestedThemeVariant="Default">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <!--  =====================  -->
    <!--  RESOURCES (FARBEN)  -->
    <!--  =====================  -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://LehrplanGenerator/Styles/Theme.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <!--  =====================  -->
    <!--  STYLES (LOOK & FEEL)  -->
    <!--  =====================  -->
    <Application.Styles>
        <FluentTheme />

        <!--  Global Font  -->
        <Style Selector="Window">
            <Setter Property="FontFamily" Value="Inter" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <Style Selector="UserControl">
            <Setter Property="FontFamily" Value="Inter" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <!--  Controls  -->
        <StyleInclude Source="avares://LehrplanGenerator/Styles/Controls.axaml" />
    </Application.Styles>

</Application>
