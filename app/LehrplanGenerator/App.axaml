<Application
    x:Class="LehrplanGenerator.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LehrplanGenerator"
    RequestedThemeVariant="Light">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://LehrplanGenerator/Styles/Theme.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>

        <FluentTheme>
            <FluentTheme.Palettes>
                <ColorPaletteResources x:Key="Light" Accent="#2E7D32" />
                <ColorPaletteResources x:Key="Dark" Accent="#2E7D32" />
            </FluentTheme.Palettes>
        </FluentTheme>

        <StyleInclude Source="avares://LehrplanGenerator/Styles/Controls.axaml" />
        <StyleInclude Source="avares://LehrplanGenerator/Styles/Animations.axaml" />

    </Application.Styles>
</Application>
