<ResourceDictionary xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.ThemeDictionaries>

        <!--  =====================  -->
        <!--  LIGHT  -->
        <!--  =====================  -->
        <ResourceDictionary x:Key="Light">

            <!--  COLORS  -->
            <Color x:Key="SystemAccentColor">#2E7D32</Color>
            <Color x:Key="SystemAccentColorLight1">#3E8F45</Color>
            <Color x:Key="SystemAccentColorDark1">#256628</Color>

            <!--  BACKGROUND  -->
            <Color x:Key="BgPrimaryColor">#F8FAFC</Color>
            <Color x:Key="BgSecondaryColor">#FFFFFF</Color>
            <Color x:Key="InputBgColor">#FFFFFF</Color>

            <!--  TEXT  -->
            <Color x:Key="TextPrimaryColor">#020617</Color>
            <Color x:Key="TextMutedColor">#64748B</Color>

            <!--  ðŸ”´ ERROR TEXT  -->
            <Color x:Key="TextErrorColor">#DC2626</Color>

            <!--  BORDERS  -->
            <Color x:Key="BorderSubtleColor">#CBD5E1</Color>

            <!--  ACCENT  -->
            <Color x:Key="AccentPrimaryColor">#2E7D32</Color>

            <!--  BRUSHES  -->
            <SolidColorBrush x:Key="BgPrimary" Color="{DynamicResource BgPrimaryColor}" />
            <SolidColorBrush x:Key="BgSecondary" Color="{DynamicResource BgSecondaryColor}" />
            <SolidColorBrush x:Key="InputBg" Color="{DynamicResource InputBgColor}" />

            <SolidColorBrush x:Key="TextPrimary" Color="{DynamicResource TextPrimaryColor}" />
            <SolidColorBrush x:Key="TextMuted" Color="{DynamicResource TextMutedColor}" />
            <SolidColorBrush x:Key="TextError" Color="{DynamicResource TextErrorColor}" />

            <SolidColorBrush x:Key="BorderSubtle" Color="{DynamicResource BorderSubtleColor}" />

            <SolidColorBrush x:Key="AccentPrimary" Color="{DynamicResource AccentPrimaryColor}" />
            <SolidColorBrush x:Key="TextOnAccent" Color="#FFFFFF" />

            <!--  ðŸ”¥ FOCUS / TEXTBOX  -->
            <SolidColorBrush x:Key="TextBoxBorderFocusedBrush" Color="{DynamicResource AccentPrimaryColor}" />

            <SolidColorBrush x:Key="ControlFocusVisualBrush" Color="Transparent" />

        </ResourceDictionary>

        <!--  =====================  -->
        <!--  DARK  -->
        <!--  =====================  -->
        <ResourceDictionary x:Key="Dark">

            <Color x:Key="SystemAccentColor">#2E7D32</Color>
            <Color x:Key="SystemAccentColorLight1">#3E8F45</Color>
            <Color x:Key="SystemAccentColorDark1">#256628</Color>

            <!--  BACKGROUND  -->
            <Color x:Key="BgPrimaryColor">#0F0F0F</Color>
            <Color x:Key="BgSecondaryColor">#1A1A1A</Color>
            <Color x:Key="InputBgColor">#1E1E1E</Color>

            <!--  TEXT  -->
            <Color x:Key="TextPrimaryColor">#EDEDED</Color>
            <Color x:Key="TextMutedColor">#9CA3AF</Color>

            <!--  ðŸ”´ ERROR TEXT  -->
            <Color x:Key="TextErrorColor">#F87171</Color>

            <!--  BORDERS  -->
            <Color x:Key="BorderSubtleColor">#2A2A2A</Color>

            <!--  ACCENT  -->
            <Color x:Key="AccentPrimaryColor">#2E7D32</Color>

            <!--  BRUSHES  -->
            <SolidColorBrush x:Key="BgPrimary" Color="{DynamicResource BgPrimaryColor}" />
            <SolidColorBrush x:Key="BgSecondary" Color="{DynamicResource BgSecondaryColor}" />
            <SolidColorBrush x:Key="InputBg" Color="{DynamicResource InputBgColor}" />

            <SolidColorBrush x:Key="TextPrimary" Color="{DynamicResource TextPrimaryColor}" />
            <SolidColorBrush x:Key="TextMuted" Color="{DynamicResource TextMutedColor}" />
            <SolidColorBrush x:Key="TextError" Color="{DynamicResource TextErrorColor}" />

            <SolidColorBrush x:Key="BorderSubtle" Color="{DynamicResource BorderSubtleColor}" />

            <SolidColorBrush x:Key="AccentPrimary" Color="{DynamicResource AccentPrimaryColor}" />
            <SolidColorBrush x:Key="TextOnAccent" Color="#FFFFFF" />

            <SolidColorBrush x:Key="TextBoxBorderFocusedBrush" Color="{DynamicResource AccentPrimaryColor}" />

            <SolidColorBrush x:Key="ControlFocusVisualBrush" Color="Transparent" />

        </ResourceDictionary>

    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
