<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  ================= BUTTON TRANSITIONS =================  -->
    <!--  Sanfte, ruhige Animationen â€“ kein UI-Gewackel  -->

    <Style Selector="Button">
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15" />
                <DoubleTransition Property="Opacity" Duration="0:0:0.12" />
            </Transitions>
        </Setter>
    </Style>

    <!--  ================= PRIMARY BUTTON =================  -->
    <!--  Hover: leicht dunkler  -->
    <Style Selector="Button.primary:pointerover">
        <Setter Property="Background" Value="{DynamicResource AccentPrimaryHover}" />
    </Style>

    <!--  Pressed: minimal dunkler + etwas weniger Opacity  -->
    <Style Selector="Button.primary:pressed">
        <Setter Property="Background" Value="{DynamicResource AccentPrimaryPressed}" />
        <Setter Property="Opacity" Value="0.95" />
    </Style>

    <!--  ================= LINK BUTTON =================  -->
    <!--  Nur Opacity, kein Farbwechsel  -->
    <Style Selector="Button.link:pointerover">
        <Setter Property="Opacity" Value="0.85" />
    </Style>

    <Style Selector="Button.link:pressed">
        <Setter Property="Opacity" Value="0.7" />
    </Style>

    <!--  ================= LISTBOX ITEM =================  -->
    <!--  Subtiler Hover, KEINE Farbe (Selection kommt aus Controls)  -->
    <Style Selector="ListBoxItem:pointerover">
        <Setter Property="Opacity" Value="0.97" />
    </Style>

</Styles>
