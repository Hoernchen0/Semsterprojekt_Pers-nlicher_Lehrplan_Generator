<ResourceDictionary xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  BACKGROUND  -->
    <Color x:Key="BgPrimary">#0F0F0F</Color>
    <Color x:Key="BgSecondary">#1A1A1A</Color>
    <Color x:Key="InputBg">#1E1E1E</Color>

    <!--  TEXT  -->
    <Color x:Key="TextPrimary">#EDEDED</Color>
    <Color x:Key="TextMuted">#9CA3AF</Color>
    <Color x:Key="TextOnAccent">#FFFFFF</Color>

    <!--  BORDERS  -->
    <Color x:Key="BorderSubtle">#2A2A2A</Color>

    <!--  ACCENT (GREEN ONLY)  -->
    <Color x:Key="AccentPrimary">#2E7D32</Color>
    <Color x:Key="AccentPrimaryHover">#256628</Color>
    <Color x:Key="AccentPrimarySoft">#1E3A25</Color>

    <!--  SEMANTIC  -->
    <Color x:Key="TextSecondaryOnDark">#B6C2CF</Color>
</ResourceDictionary>
