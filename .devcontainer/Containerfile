# Basis-Image mit .NET SDK
FROM mcr.microsoft.com/dotnet/sdk:8.0

# Root User f√ºr Installation
USER root

# Grundpakete & Essentials
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl unzip zip git gnupg ca-certificates python3-pip wget && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Java 17 via SDKMAN
RUN curl -s "https://get.sdkman.io" | bash && \
    bash -c "source $HOME/.sdkman/bin/sdkman-init.sh && sdk install java 17.0.9-tem && sdk flush archives"

ENV JAVA_HOME="/root/.sdkman/candidates/java/current"
ENV PATH="$JAVA_HOME/bin:$PATH"

# .NET SDK (bereits im Basisimage, aber hier optional aktualisiert)
ARG DOTNET_VERSION=8.0
RUN wget https://dot.net/v1/dotnet-install.sh -O dotnet-install.sh && \
    chmod +x dotnet-install.sh && \
    ./dotnet-install.sh --channel $DOTNET_VERSION && \
    rm dotnet-install.sh

ENV PATH="$PATH:/root/.dotnet:/root/.dotnet/tools"

# üõ†Ô∏è Android SDK (f√ºr Avalonia Android Build)
#RUN mkdir -p /usr/lib/android-sdk/cmdline-tools && \
#    cd /usr/lib/android-sdk/cmdline-tools && \
#    wget https://dl.google.com/android/repository/commandlinetools-linux-11076708_latest.zip -O tools.zip && \
#    unzip tools.zip -d tools && \
#    rm tools.zip && \
#    mv tools /usr/lib/android-sdk/cmdline-tools/latest && \
#    yes | /usr/lib/android-sdk/cmdline-tools/latest/bin/sdkmanager --sdk_root=/usr/lib/android-sdk --licenses && \
#    /usr/lib/android-sdk/cmdline-tools/latest/bin/sdkmanager --sdk_root=/usr/lib/android-sdk \
#    "platform-tools" "platforms;android-34" "build-tools;34.0.0"

# üõ†Ô∏è Android SDK (f√ºr Avalonia Android Build)
RUN mkdir -p /usr/lib/android-sdk/cmdline-tools && \
    cd /usr/lib/android-sdk && \
    wget https://dl.google.com/android/repository/commandlinetools-linux-11076708_latest.zip -O cmdline-tools.zip && \
    unzip cmdline-tools.zip -d cmdline-tools-temp && \
    rm cmdline-tools.zip && \
    mkdir -p /usr/lib/android-sdk/cmdline-tools/latest && \
    mv cmdline-tools-temp/cmdline-tools/* /usr/lib/android-sdk/cmdline-tools/latest/ && \
    rm -rf cmdline-tools-temp && \
    chmod +x /usr/lib/android-sdk/cmdline-tools/latest/bin/sdkmanager && \
    yes | /usr/lib/android-sdk/cmdline-tools/latest/bin/sdkmanager --sdk_root=/usr/lib/android-sdk --licenses && \
    yes | /usr/lib/android-sdk/cmdline-tools/latest/bin/sdkmanager --sdk_root=/usr/lib/android-sdk \
        "platform-tools" \
        "platforms;android-34" \
        "build-tools;34.0.0"


ENV ANDROID_HOME="/usr/lib/android-sdk"
ENV PATH="${ANDROID_HOME}/cmdline-tools/latest/bin:${ANDROID_HOME}/platform-tools:${PATH}"

