# ===== Basisimage =====
FROM mcr.microsoft.com/devcontainers/python:3.12

# ===== Root User für Installation =====
USER root

# ===== Grundpakete & Essentials =====
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    unzip \
    zip \
    git \
    gnupg \
    ca-certificates \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# ===== Java 17 via SDKMAN =====
RUN curl -s "https://get.sdkman.io" | bash && \
    bash -c "source $HOME/.sdkman/bin/sdkman-init.sh && sdk install java 17.0.9-tem && sdk flush archives"

ENV JAVA_HOME="/root/.sdkman/candidates/java/current"
ENV PATH="$JAVA_HOME/bin:$PATH"

# ===== .NET SDK für Avalonia =====
ARG DOTNET_VERSION=8.0
RUN wget https://dot.net/v1/dotnet-install.sh -O dotnet-install.sh && \
    chmod +x dotnet-install.sh && \
    ./dotnet-install.sh --channel $DOTNET_VERSION && \
    rm dotnet-install.sh

ENV PATH="$PATH:/root/.dotnet:/root/.dotnet/tools"

# ===== Android SDK (optional für Avalonia Android) =====
RUN mkdir -p /usr/lib/android-sdk && \
    cd /usr/lib/android-sdk && \
    wget https://dl.google.com/android/repository/commandlinetools-linux-11076708_latest.zip && \
    unzip commandlinetools-linux-11076708_latest.zip -d cmdline-tools && \
    yes | cmdline-tools/bin/sdkmanager --sdk_root=/usr/lib/android-sdk --licenses && \
    cmdline-tools/bin/sdkmanager --sdk_root=/usr/lib/android-sdk \
        "platform-tools" "platforms;android-34" "build-tools;34.0.0"

ENV ANDROID_HOME="/usr/lib/android-sdk"
ENV PATH="$PATH:${ANDROID_HOME}/platform-tools:${ANDROID_HOME}/cmdline-tools/bin"

# ===== Python-Tools =====
RUN pip install --no-cache-dir poetry openai fastapi uvicorn

# ===== Arbeitsverzeichnis =====
WORKDIR /workspace

# ===== Wieder auf VS Code Standarduser =====
USER vscode
